<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_small_btn_radius" />
            <size android:width="@dimen/round_small_btn_width" android:height="@dimen/round_small_btn_height"/>
            <stroke android:width="@dimen/round_small_btn_stroke" android:color="#5d63b3"/>
            <solid android:color="#5d63b3"/>
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_small_btn_radius" />
            <size android:width="@dimen/round_small_btn_width" android:height="@dimen/round_small_btn_height"/>
            <stroke android:width="@dimen/round_small_btn_stroke" android:color="#4d6a71cc"/>
            <solid android:color="#4d6a71cc"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_small_btn_radius" />
            <size android:width="@dimen/round_small_btn_width" android:height="@dimen/round_small_btn_height"/>
            <solid android:color="#6a71cc"/>
        </shape>
    </item>

</selector>