    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <size android:width="100dp"
                android:height="100dp"/>
            <solid android:color="#995c5a7d"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="oval">
            <size android:width="100dp"
                android:height="100dp"/>
            <solid android:color="#995c5a7d"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size android:width="100dp"
                android:height="100dp"/>
            <solid android:color="#ff6f6c96"/>
        </shape>
    </item>

</selector>