<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#bec1ce" />
            <corners android:radius="52dp" />
            <solid android:color="#5d63b3" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#bec1ce" />
            <corners android:radius="52dp" />
            <solid android:color="#5d63b3" />
        </shape>
    </item>
    
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#bec1ce" />
            <corners android:radius="52dp" />
            <solid android:color="#6a71cc" />
        </shape>
    </item>
</selector> 