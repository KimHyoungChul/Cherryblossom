<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="164dp"
    android:orientation="vertical" >



        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="Name\nName_abcdefghijlkjkdfjdskjfosdkjfldaskjflakjewlrkjewlrkjewlrkjewlrjewlrkjewlrkjewlrkewlrjewlrkewrlewjrl"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:singleLine="false"
                android:ellipsize="end"
                android:layout_marginTop="11dp" />

        </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewBadge"
        android:layout_alignParentEnd="false"
        android:src="@drawable/ic_badge_notify"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-10dp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="6"
        android:id="@+id/textViewBadge"
        android:layout_alignParentEnd="false"

        android:textSize="14dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="80dp"

        android:layout_marginTop="-10dp"

        />

    <!--  android:fontFamily="@string/font_roboto"
        android:textStyle="bold" -->

</RelativeLayout>