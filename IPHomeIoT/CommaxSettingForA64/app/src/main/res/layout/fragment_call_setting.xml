<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/callTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_items_big_height"
        android:background="@drawable/main_menu_background_selector">

        <com.commax.settings.font.NotoRegularTextView
            android:id="@+id/callTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_items_text_height"
            android:layout_marginTop="@dimen/fragment_items_text_top_margin"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_items_text_left_margin"
            android:text="@string/callTime"
            android:textColor="#0c1a3d"
            android:textSize="@dimen/fragment_items_text_size" />

        <com.commax.settings.font.NotoRegularTextView
            android:id="@+id/callTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_items_text_height"
            android:layout_below="@id/callTimeLabel"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_items_text_left_margin"
            android:textColor="#6a71cc"
            android:textSize="@dimen/fragment_value_text_size" />

        <ImageView

            android:layout_width="@dimen/fragment_arrow_icon_width"
            android:layout_height="@dimen/fragment_arrow_icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_arrow_icon_right_margin"
            android:background="@drawable/btn_list_arrow_n" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_divider_height"
        android:layout_marginLeft="@dimen/fragment_divider_side_margin"
        android:layout_marginRight="@dimen/fragment_divider_side_margin"
        android:background="#dddfe4" />

    <RelativeLayout
        android:id="@+id/movieRecordTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_items_big_height"
        android:background="@drawable/main_menu_background_selector">

        <com.commax.settings.font.NotoRegularTextView
            android:id="@+id/movieRecordTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_items_text_height"
            android:layout_marginTop="@dimen/fragment_items_text_top_margin"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_items_text_left_margin"
            android:text="@string/movieRecordTime"
            android:textColor="#0c1a3d"
            android:textSize="@dimen/fragment_items_text_size" />

        <com.commax.settings.font.NotoRegularTextView
            android:id="@+id/movieRecordTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_items_text_height"
            android:layout_below="@id/movieRecordTimeLabel"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_items_text_left_margin"
            android:textColor="#6a71cc"
            android:textSize="@dimen/fragment_value_text_size" />

        <ImageView

            android:layout_width="@dimen/fragment_arrow_icon_width"
            android:layout_height="@dimen/fragment_arrow_icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_arrow_icon_right_margin"
            android:background="@drawable/btn_list_arrow_n" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_divider_height"
        android:layout_marginLeft="@dimen/fragment_divider_side_margin"
        android:layout_marginRight="@dimen/fragment_divider_side_margin"
        android:background="#dddfe4" />

    <RelativeLayout
        android:id="@+id/autoSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_items_small_height"
        android:background="@drawable/main_menu_background_selector">

        <com.commax.settings.font.NotoRegularTextView
            android:id="@+id/autoSaveLabel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_items_text_height"
            android:layout_marginTop="@dimen/fragment_items_text_top_margin"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_items_text_left_margin"
            android:text="@string/autoRecord"
            android:textColor="#0c1a3d"
            android:textSize="@dimen/fragment_items_text_size" />

        <CheckBox
            android:id="@+id/autoSaveSwitch"
            android:layout_width="@dimen/fragment_switch_icon_width"
            android:layout_height="@dimen/fragment_switch_icon_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fragment_switch_icon_right_margin"
            android:layout_marginTop="@dimen/fragment_switch_icon_top_margin"
            android:button="@drawable/switch_background_selector" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_divider_height"
        android:layout_marginLeft="@dimen/fragment_divider_side_margin"
        android:layout_marginRight="@dimen/fragment_divider_side_margin"
        android:background="#dddfe4" />

    <RelativeLayout
        android:id="@+id/smartPhoneCall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_items_big_height"
        android:background="@drawable/main_menu_background_selector">

        <com.commax.settings.font.NotoRegularTextView
            android:id="@+id/smartPhoneCallLabel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_items_text_height"
            android:layout_marginTop="@dimen/fragment_items_text_top_margin"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_items_text_left_margin"
            android:text="@string/smartPhoneCall"
            android:textColor="#0c1a3d"
            android:textSize="@dimen/fragment_items_text_size" />

        <com.commax.settings.font.NotoRegularTextView
            android:id="@+id/smartPhoneCallHint"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_items_text_height"
            android:layout_below="@id/smartPhoneCallLabel"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_items_text_left_margin"
            android:text="@string/smartPhoneCallHint"
            android:textColor="#6a71cc"
            android:textSize="@dimen/fragment_value_text_size" />

        <CheckBox
            android:id="@+id/smartPhoneCallSwitch"
            android:layout_width="@dimen/fragment_switch_icon_width"
            android:layout_height="@dimen/fragment_switch_icon_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fragment_switch_icon_right_margin"
            android:layout_marginTop="@dimen/fragment_switch_icon_top_margin"
            android:button="@drawable/switch_background_selector" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_divider_height"
        android:layout_marginLeft="@dimen/fragment_divider_side_margin"
        android:layout_marginRight="@dimen/fragment_divider_side_margin"
        android:background="#dddfe4"
        android:id="@+id/smartphone_divider_bar" />


</LinearLayout>