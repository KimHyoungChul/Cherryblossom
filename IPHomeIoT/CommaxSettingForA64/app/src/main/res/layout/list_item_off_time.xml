<?xml version="1.0" encoding="utf-8"?>
<com.commax.settings.util.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_items_small_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="@dimen/item_radiobtn_icon_width"
        android:layout_height="@dimen/item_radiobtn_icon_height"
        android:layout_marginLeft="@dimen/item_radiobtn_icon_left_margin"
        android:duplicateParentState="true"
        android:src="@drawable/radiobutton_background_selector" />


    <com.commax.settings.font.NotoRegularTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_radiobtn_value_left_margin"
        android:gravity="center_vertical"
        android:textColor="#0c1a3d"
        android:textSize="@dimen/item_title_text_size" />
</com.commax.settings.util.CheckableLinearLayout>