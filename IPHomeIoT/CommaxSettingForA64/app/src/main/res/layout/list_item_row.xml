<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_applist_body_height"
    android:background="@drawable/main_menu_background_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/item_applist_icon_width"
        android:layout_height="@dimen/item_applist_icon_height"
        android:layout_marginLeft="@dimen/item_applist_left_margin"
        android:layout_marginTop="@dimen/item_applist_top_margin"
        />


    <com.commax.settings.font.NotoRegularTextView
        android:id="@+id/appName"
        android:layout_toRightOf="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:paddingLeft="@dimen/item_applist_left_margin"
        android:textColor="#0c1a3d"
        android:text="마이앱"
        android:textSize="@dimen/item_applist_name_text_size" />
    <com.commax.settings.font.NotoRegularTextView
        android:id="@+id/version"
        android:layout_toRightOf="@id/icon"
        android:layout_below="@id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_applist_left_margin"
        android:text="1.1.1"
        android:textColor="#0c1a3d"
        android:textSize="@dimen/item_applist_ver_text_size" />



</RelativeLayout>