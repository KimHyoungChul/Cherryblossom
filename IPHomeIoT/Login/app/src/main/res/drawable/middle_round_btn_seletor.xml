<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/component_id_btn_radius" />
            <size android:width="@dimen/component_id_btn_width" android:height="@dimen/component_id_btn_height" />
            <stroke android:width="1dp" android:color="#6b73c9" />
            <solid android:color="#1A000000" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/component_id_btn_radius" />
            <size android:width="@dimen/component_id_btn_width" android:height="@dimen/component_id_btn_height" />
            <stroke android:width="1dp" android:color="#6b73c9" />
            <!--<solid android:color="#1A000000"/>-->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/component_id_btn_radius" />
            <size android:width="@dimen/circle_size" android:height="@dimen/round_bt_height" />
            <stroke android:width="1dp" android:color="#6b73c9" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</selector>