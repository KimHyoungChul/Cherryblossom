<?xml version="1.0" encoding="utf-8"?>
<com.commax.ipdoorcamerasetting.util.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkableLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:duplicateParentState="true"
        android:src="@drawable/checkbox_selector" />

    <com.commax.ipdoorcamerasetting.font.NotoRegularTextView
        android:id="@+id/deviceName"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textColor="#0c1a3d"
        android:textSize="20dp" />

    <com.commax.ipdoorcamerasetting.font.NotoRegularButton
        android:id="@+id/preview"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginRight="40dp"
        android:focusable="false"
        android:background="@drawable/preview_button_selector"
        android:text="@string/preview"
        android:textColor="@drawable/preview_button_text_color_selector"
        android:textSize="17dp" />

</com.commax.ipdoorcamerasetting.util.CheckableLinearLayout>