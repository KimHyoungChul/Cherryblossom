<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dongho"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <!--타이틀-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_title_1depth"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/close_button_selector"
            android:onClick="goBack" />

        <com.commax.ipdoorcamerasetting.font.NotoDemiLightTextView
            android:id="@+id/screenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/front_camera_registration"
            android:textColor="#ffffff"
            android:textSize="24dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d6e1" />
    <!--내비게이션-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f0f1f9"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.commax.ipdoorcamerasetting.font.NotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="@string/dong_ho_setting"
            android:textColor="#9096d6"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_list_arrow_n" />

        <com.commax.ipdoorcamerasetting.font.NotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/front_camera_registration"
            android:textColor="#d1d5e0"
            android:textSize="18dp" />


    </LinearLayout>

    <!--동호 입력부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.commax.ipdoorcamerasetting.font.NotoRegularTextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dong"
                    android:textColor="#9096d6"
                    android:textSize="22dp" />

                <com.commax.ipdoorcamerasetting.font.NotoRegularEditText
                    android:id="@+id/dongInput"
                    android:layout_width="336dp"
                    android:layout_height="50dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:inputType="number" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="50dp"
                    android:layout_height="2dp"

                    />

                <View
                    android:layout_width="336dp"
                    android:layout_height="2dp"
                    android:background="#8489d5" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.commax.ipdoorcamerasetting.font.NotoRegularTextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ho"
                    android:textColor="#9096d6"
                    android:textSize="22dp" />

                <com.commax.ipdoorcamerasetting.font.NotoRegularEditText
                    android:id="@+id/hoInput"
                    android:layout_width="336dp"
                    android:layout_height="50dp"
                    android:background="#00000000"
                    android:gravity="center"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="50dp"
                    android:layout_height="2dp"

                    />

                <View
                    android:layout_width="336dp"
                    android:layout_height="2dp"
                    android:background="#8489d5" />
            </LinearLayout>

            <com.commax.ipdoorcamerasetting.font.NotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center_vertical"
                android:text="@string/dongho_help_text"
                android:textColor="#999ca5"
                android:textSize="18dp" />


        </LinearLayout>


    </LinearLayout>
    <!--하단바-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.commax.ipdoorcamerasetting.font.NotoRegularButton
            android:id="@+id/confirm"
            android:layout_width="148dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_button_selector"
            android:text="@string/next"
            android:onClick="launchCameraRegistrationActivity"
            android:textColor="@drawable/common_button_text_color_selector"
            android:textSize="17dp" />

    </LinearLayout>


</LinearLayout>
