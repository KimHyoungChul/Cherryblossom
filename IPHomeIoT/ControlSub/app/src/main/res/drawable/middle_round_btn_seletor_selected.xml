<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/component_button_radius" />
            <size android:width="@dimen/component_button_width"
                android:height="@dimen/component_button_heigh"/>
            <stroke
                android:width="1dp"
                android:color="#6b73c9"/>
            <solid android:color="#5d63b3"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/component_button_radius" />
            <size android:width="@dimen/component_button_width"
                android:height="@dimen/component_button_heigh"/>
            <stroke
                android:width="1dp"
                android:color="#4D6a71cc"/>
            <solid android:color="#4D6a71cc"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/component_button_radius" />
            <size android:width="@dimen/component_button_width"
                android:height="@dimen/component_button_heigh"/>
            <stroke
                android:width="1dp"
                android:color="#6b73c9"/>
            <solid android:color="#6a71cc"/>
        </shape>
    </item>

</selector>