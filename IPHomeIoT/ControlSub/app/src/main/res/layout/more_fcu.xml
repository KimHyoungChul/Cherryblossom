<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/title_bar_side_padding"
        android:paddingRight="@dimen/title_bar_side_padding"
        android:paddingTop="@dimen/title_bar_top_padding"
        android:paddingBottom="@dimen/title_bar_bottom_padding"
        android:weightSum="1"
        >

        <com.commax.controlsub.Common.ImageBT
            android:id="@+id/title_back_button"
            android:layout_width="@dimen/title_bar_back_btn"
            android:layout_height="@dimen/title_bar_back_btn"
            android:src="@mipmap/btn_title_back_n"
            android:onClick="onClick"
            android:layout_gravity="left"
            android:visibility="visible"
            xmlns:my="http://schemas.android.com/apk/res/com.commax.controlsub"
            my:imageOpacity="0.6"
            android:background="@null"
            />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/title_text"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:text="@string/FCU"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/title_power_button"
            android:layout_width="@dimen/title_bar_power_btn"
            android:layout_height="@dimen/title_bar_power_btn"
            android:src="@drawable/icon_change_bt_smallpower"
            android:onClick="onClick"
            android:background="@drawable/circle_bt_smallpower"
            android:layout_gravity="right"
            android:clickable="true"
            />
    </LinearLayout>

    <View
        android:layout_height="@dimen/title_bar_underline"
        android:layout_width="fill_parent"
        android:background="@color/title_bar_underline" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/component_layout_side_padding"
        android:paddingLeft="@dimen/component_layout_side_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/fcu_bottom_padding"
                android:paddingTop="@dimen/fcu_top_padding"
                android:paddingLeft="@dimen/component_layout_left_padding"
                android:layout_gravity="center"
                >
                <com.commax.controlsub.Common.CircularSeekBar
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res/com.commax.controlsub"
                    android:id="@+id/circularSeekBar_control"
                    android:layout_width="@dimen/fcu_circlebar_width_height"
                    android:layout_height="@dimen/fcu_circlebar_width_height"
                    app:start_angle="135"
                    app:end_angle="45"
                    app:circle_x_radius="@dimen/fcu_circlebar_radius"
                    app:circle_y_radius="@dimen/fcu_circlebar_radius"
                    app:use_custom_radii="true"
                    app:progress="30"
                    app:max="100"
                    app:circle_color="#88c9c8d6"
                    app:circle_progress_color="#88504fae"
                    app:circle_stroke_width="@dimen/circle_stroke_width"
                    app:pointer_halo_width="@dimen/pointer_halo_width"
                    app:pointer_radius="@dimen/pointer_radius"
                    app:pointer_halo_border_width="@dimen/pointer_halo_border_width"
                    app:pointer_alpha_ontouch="100"
                    app:pointer_color="#6a71cc"
                    app:pointer_halo_color="#886a71cc"
                    android:layout_weight="0.15"
                    />
                <LinearLayout
                    android:layout_width="@dimen/fcu_circlebar_width_height"
                    android:layout_height="@dimen/fcu_circlebar_width_height"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/fcu_icon_top_padding"
                    >
                    <ImageView
                        android:id="@+id/ic_dc_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fcu_data_height"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/fcu_circlebar_width_height"
                    android:layout_height="@dimen/fcu_circlebar_width_height"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/fcu_data_top_padding"
                    >
                    <TextView
                        android:id="@+id/fcu_data_value"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fcu_data_height"
                        android:textSize="@dimen/fcu_data_text"
                        android:textColor="@color/data_number_text"
                        />
                    <TextView
                        android:id="@+id/fcu_data_scale1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fcu_data_height"
                        android:textColor="@color/data_number_text"
                        android:text="°"
                        android:textSize="@dimen/fcu_data_scale_text"/>
                    <TextView
                        android:id="@+id/fcu_data_scale2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/data_number_text"
                        android:layout_height="@dimen/fcu_data_height"
                        android:text="C"
                        android:textSize="@dimen/fcu_data_C_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/fcu_circlebar_width_height"
                    android:layout_height="@dimen/fcu_circlebar_width_height"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/fcu_current_data_top_padding">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fcu_current_height"
                        android:text="@string/current"
                        android:textColor="@color/circular_under_small_text"
                        android:textSize="@dimen/fcu_current_scale_text"/>
                    <TextView
                        android:id="@+id/fcu_current_data_value"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fcu_current_height"
                        android:text="20"
                        android:textColor="@color/circular_under_small_text"
                        android:textSize="@dimen/fcu_current_data"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fcu_current_height"
                        android:text="°C"
                        android:textColor="@color/circular_under_small_text"
                        android:textSize="@dimen/fcu_current_scale_text"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="@dimen/fcu_circlebar_width_height"
                    android:layout_height="@dimen/fcu_circlebar_width_height"
                    android:gravity="center_horizontal|bottom"
                    >
                    <ImageButton
                        android:id="@+id/fcu_minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_change_bt_leveldown"
                        android:background="@android:color/transparent"
                        />
                    <ImageButton
                        android:id="@+id/fcu_plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_change_bt_levelup"
                        android:background="@android:color/transparent"
                        />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/fcu_circlebar_width_height"
                    android:layout_height="@dimen/fcu_circlebar_width_height"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/fcu_icon_top_padding"
                    >
                    <ImageView
                        android:id="@+id/component_outgoint_ventilacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/fcu_layout_right_top_padding"
            android:paddingBottom="@dimen/fcu_layout_right_top_padding"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/component_layout_left_padding"
               >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/component_image_bottom_padding"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_dc_mode"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/working_mode"
                            android:textColor="@color/mode_text"
                            android:layout_gravity="center"
                            android:textSize="@dimen/component_mode_text"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/component_button_top_bottom_padding"
                        android:paddingTop="@dimen/component_button_top_bottom_padding"
                        >
                        <Button
                            android:id="@+id/cooling_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cooling"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"
                            android:layout_marginRight="@dimen/component_button_right_margin"/>
                        <Button
                            android:id="@+id/heating_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/heating"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:layout_marginRight="@dimen/component_button_right_margin"
                            android:textColor="@drawable/middle_button_text_color"/>
                        <Button
                            android:id="@+id/circulating_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/circular"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"/>
                    </LinearLayout>
                    <View
                        android:layout_height="@dimen/title_bar_underline"
                        android:layout_width="@dimen/component_layout_underline_right_width"
                        android:background="@color/component_bar" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/component_image_bottom_padding"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_dc_outdoor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/outgoing_mode"
                            android:textColor="@color/mode_text"
                            android:layout_gravity="center"
                            android:textSize="@dimen/component_mode_text"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/component_button_top_bottom_padding"
                        android:paddingTop="@dimen/component_button_top_bottom_padding"
                        >
                        <Button
                            android:id="@+id/away_on"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/on_english_only"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"
                            android:layout_marginRight="@dimen/component_button_right_margin"/>
                        <Button
                            android:id="@+id/away_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/off_english_only"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/fanspeed_upper_bar"
                        android:layout_height="@dimen/title_bar_underline"
                        android:layout_width="@dimen/component_layout_underline_right_width"
                        android:background="@color/component_bar" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fanspeed_layout"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/component_image_bottom_padding"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_dc_air"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wind_speed"
                            android:textColor="@color/mode_text"
                            android:layout_gravity="center"
                            android:textSize="@dimen/component_mode_text"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/component_button_button_padding"
                        android:paddingTop="@dimen/component_button_top_bottom_padding"
                        >
                        <Button
                            android:id="@+id/high_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/high"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"
                            android:layout_marginRight="@dimen/component_button_right_margin"/>
                        <Button
                            android:id="@+id/middle_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/medium"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"
                            android:layout_marginRight="@dimen/component_button_right_margin"/>
                        <Button
                            android:id="@+id/low_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/low"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/component_button_top_bottom_padding"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/auto_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto"
                            android:textSize="@dimen/component_button_text"
                            android:background="@drawable/middle_round_btn_seletor"
                            android:textColor="@drawable/middle_button_text_color"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>