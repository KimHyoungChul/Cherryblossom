<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_btn_radius" />
            <size android:width="@dimen/round_btn_width" android:height="@dimen/round_btn_height"/>
            <solid android:color="#806a71cc"/>
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_btn_radius" />
            <size android:width="@dimen/round_btn_width" android:height="@dimen/round_btn_height"/>
            <solid android:color="#ff6a71cc"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_btn_radius" />
            <size android:width="@dimen/round_btn_width" android:height="@dimen/round_btn_height"/>
            <stroke android:width="@dimen/round_btn_stroke" android:color="#806a71cc"/>
        </shape>
    </item>

</selector>