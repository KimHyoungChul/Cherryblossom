<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/auto_detail_button_radius" />
            <size android:width="@dimen/auto_detail_button_width"
                android:height="@dimen/auto_detail_button_height"/>
            <solid
                android:color="#ff6a71cc"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/auto_detail_button_radius" />
            <size android:width="@dimen/auto_detail_button_width"
                android:height="@dimen/auto_detail_button_height"/>
            <solid
                android:color="#ff6a71cc"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/auto_detail_button_radius" />
            <size android:width="@dimen/auto_detail_button_width"
                android:height="@dimen/auto_detail_button_height"/>
            <stroke
                android:width="@dimen/auto_detail_button_stroke" android:color="#806a71cc"/>
        </shape>
    </item>

</selector>