<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="@dimen/scroll_width"
    android:layout_height="@dimen/scroll_height" tools:context=".MainActivity" android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/air_status_text_height"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textSize="@dimen/air_status_text_big"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/air_status_top"
            android:layout_marginLeft="@dimen/air_status_left_right"
            android:layout_marginRight="@dimen/air_status_left_right"/>

        <TextView
            android:layout_marginTop="@dimen/air_type_top"
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/user_manuals"
            android:textSize="@dimen/weather_status_text"
            android:textColor="#fff" />

    </LinearLayout>

</LinearLayout>
