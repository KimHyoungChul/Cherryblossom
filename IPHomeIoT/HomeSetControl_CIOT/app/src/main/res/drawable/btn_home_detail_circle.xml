<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">

            <size android:width="@dimen/dimming_detail_circle"
                android:height="@dimen/dimming_detail_circle"/>
            <solid
                android:color="#806a71cc"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="oval">
            <size android:width="@dimen/dimming_detail_circle"
                android:height="@dimen/dimming_detail_circle"/>
            <solid
                android:color="#806a71cc"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size android:width="@dimen/dimming_detail_circle"
                android:height="@dimen/dimming_detail_circle"/>
            <stroke
                android:width="2dp" android:color="#806a71cc"/>
        </shape>
    </item>

</selector>