<?xml version="1.0" encoding="utf-8"?>
<com.commax.wirelesssetcontrol.touchmirror.view.subview.IconLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/icon_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="invisible">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/icon_widget_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:paddingBottom="2dp"
                android:shadowColor="#000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/icon_widget_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:paddingBottom="2dp"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:textSize="13dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:id="@+id/icon_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <ImageView
                    android:id="@+id/icon_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/icon_center_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textAlignment="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textSize="@dimen/main_lay_menu_mode_text"
                    android:textColor="#34325c"
                    android:visibility="gone"/>
            </FrameLayout>
            <TextView
                android:id="@+id/icon_apps_name"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:textSize="13dp"
                android:lineSpacingExtra="-2dp"
                android:visibility="gone"
                android:paddingLeft = "2dp"
                android:paddingRight = "2dp"
                android:maxLines="2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icon_host_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
        </LinearLayout>
    </FrameLayout>
</com.commax.wirelesssetcontrol.touchmirror.view.subview.IconLayout>
