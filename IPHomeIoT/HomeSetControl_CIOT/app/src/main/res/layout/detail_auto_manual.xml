<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_auto_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_detail_auto"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_auto_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto"
            android:textSize="@dimen/auto_detail_text"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/bt_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.commax.wirelesssetcontrol.ImageBT
            android:visibility="invisible"
            xmlns:my="http://schemas.android.com/apk/res/com.commax.wirelesssetcontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_home_more_n"
            my:imageOpacity="0.6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_details"
            android:textSize="@dimen/auto_detail_show_more_text"
            android:textColor="#800c1a3d"/>

        <com.commax.wirelesssetcontrol.ImageBT
            xmlns:my="http://schemas.android.com/apk/res/com.commax.wirelesssetcontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_home_more_n"
            my:imageOpacity="0.6"/>

    </LinearLayout>

</LinearLayout>